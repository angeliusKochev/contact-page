---
import Arrow from "../images/message-arrow.png";
import { availableInterests } from "../scripts/form/consts.js";
---

<div class="container-form">
  <p class="text">I'm interested in...</p>

  <!-- Tags -->

  <div class="tags" id="tags">
    {
      availableInterests.map((interest) => {
        return (
          <div class="tag">
            <p>{interest}</p>
          </div>
        );
      })
    }
  </div>

  <!-- Form -->
  <form action="#" method="GET">
    <div class="form">
      <div>
        <input type="text" id="name" placeholder="Your name" />
      </div>
      <div>
        <input type="email" id="email" placeholder="Your email" />
      </div>
      <div>
        <input type="text" id="message" placeholder="Your message" />
      </div>
    </div>

    <button id="submit" type="submit"
      ><img src={Arrow} alt="" />Send message</button
    >
  </form>
</div>

<script src="../scripts/form/index.js"></script>

<style>
  .container-form {
    max-width: 700px;
    background-color: #eeeeee;
    padding: 48px;
    border-radius: 24px;
  }

  .text {
    color: #2e0249;
    margin-bottom: 24px;
  }

  /* tags */

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 64px;
  }

  .tag {
    padding-block: 16px;
    padding-inline: 26px;
    border: 1px rgba(46, 2, 73, 0.3) solid;
    border-radius: 8px;
    cursor: pointer;
  }

  .tag p {
    color: rgba(46, 2, 73, 0.3);
  }

  .select-tag {
    background-color: #a91079;
  }

  .select-tag p {
    color: #eeeeee;
  }

  /* Form */

  .form {
    display: flex;
    flex-direction: column;
    gap: 64px;
    margin-bottom: 222px;
  }

  input {
    width: 100%;
    border: none;
    border-bottom: 3px solid rgba(46, 2, 73, 0.3);
    padding-block: 8px;
    background-color: transparent;
  }

  input:focus {
    outline: none;
    border-bottom-color: #a91079;
    caret-color: #a91079;
  }

  input:focus::placeholder {
    color: transparent;
  }

  input[type="text"] {
    font-size: 20px;
    font-weight: 500;
    line-height: 30px;
    /* color: rgba(46, 2, 73, 0.3); */
  }

  input[type="email"] {
    font-size: 20px;
    font-weight: 500;
    line-height: 30px;
    /* color: rgba(46, 2, 73, 0.3); */
  }

  .error {
    border-bottom-color: #f44336;
  }

  .error::placeholder {
    color: transparent;
  }

  .error-text {
    color: #f44336;
  }

  button {
    background-color: #a91079;
    color: #eeeeee;
    font-weight: 500;
    font-size: 20px;
    line-height: 30px;
    padding: 24px 64px;
    border-radius: 16px;
    border: none;
  }

  button img {
    float: left;
    margin-right: 16px;
  }
</style>
